{
  "version": 2,
  "builds": [
    {
      "src": "dnd-client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "dnd-server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/_diag",
      "dest": "/dnd-server/server.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/dnd-server/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/dnd-server/public/uploads/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dnd-client/build/$1"
    },
    {
      "src": "(.*)",
      "dest": "/dnd-client/build/index.html"
    }
  ]
}